{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "tuition_fee_id": {
      "type": "string"
    },
    "student_id": {
      "type": "string"
    },
    "student_no": {
      "type": "string"
    },
    "semester": {
      "type": "string"
    },
    "school_year": {
      "type": "string"
    },
    "payment_amount": {
      "type": "decimal"
    },
    "student_info": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::student-info.student-info",
      "inversedBy": "payment"
    },
    "tuition_fee": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::tuition-fee.tuition-fee",
      "mappedBy": "payment_histoty"
    },
    "payment_type": {
      "type": "enumeration",
      "enum": [
        "tuition_fee",
        "other_fees",
        "old_balance"
      ]
    },
    "payment_name": {
      "type": "string"
    },
    "or_number": {
      "type": "string"
    },
    "payment_number": {
      "type": "integer"
    },
    "amount_paid": {
      "type": "decimal",
      "default": 0
    },
    "date_paid": {
      "type": "date"
    },
    "due_date": {
      "type": "date"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid",
        "partial"
      ],
      "default": "unpaid"
    }
  }
}
